{
  "name": "BluePill F103C8",
  "board": "bluepill_f103c8",
  "mcu": "stm32f103c8t6",
  "architecture": "arm-cortex-m3",
  "f_cpu": "72000000L",
  "variant": "STM32F1xx/F103C8T_F103CB(T-U)",
  "product_line": "STM32F103xB",

  "compiler_flags": {
    "common": [
      "-mcpu=cortex-m3",
      "-mthumb",
      "-ffunction-sections",
      "-fdata-sections",
      "-Wno-error=unused-function",
      "-Wno-error=unused-variable",
      "-Wno-error=deprecated-declarations",
      "-Wno-unused-parameter",
      "-Wno-sign-compare",
      "-MMD"
    ],
    "c": [
      "-std=gnu17",
      "-Wno-old-style-declaration"
    ],
    "cxx": [
      "-std=gnu++17",
      "-fno-exceptions",
      "-fno-rtti",
      "-fno-threadsafe-statics"
    ]
  },

  "linker_flags": [
    "-mcpu=cortex-m3",
    "-mthumb",
    "-Wl,--gc-sections",
    "-Wl,--cref",
    "-Wl,--check-sections",
    "-Wl,--unresolved-symbols=report-all",
    "-Wl,--warn-common",
    "--specs=nano.specs",
    "--specs=nosys.specs",
    "-Wl,--entry=Reset_Handler"
  ],

  "linker_scripts": [
    "ldscript.ld"
  ],

  "linker_libs": [
    "-lgcc",
    "-lstdc++",
    "-lm",
    "-lc"
  ],

  "profiles": {
    "release": {
      "compile_flags": ["-Os", "-flto=auto", "-fno-fat-lto-objects"],
      "link_flags": ["-flto=auto", "-fuse-linker-plugin"]
    },
    "quick": {
      "compile_flags": ["-O1"],
      "link_flags": ["-flto=auto", "-fuse-linker-plugin"]
    }
  },

  "defines": [
    "STM32F1",
    "STM32F103xB",
    "ARDUINO_ARCH_STM32",
    ["STM32_CORE_VERSION_MAJOR", "2"],
    ["STM32_CORE_VERSION_MINOR", "12"],
    "USE_HAL_DRIVER",
    ["F_CPU", "72000000L"]
  ],

  "upload": {
    "maximum_size": 65536,
    "maximum_ram_size": 20480
  }
}
