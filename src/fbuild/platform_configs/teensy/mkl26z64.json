{
  "name": "NXP MKL26Z64",
  "description": "Configuration for MKL26Z64 MCU (Teensy LC) - ARM Cortex-M0+ @ 48MHz",
  "mcu": "mkl26z64",
  "architecture": "arm",

  "compiler_flags": {
    "common": [
      "-mcpu=cortex-m0plus",
      "-mthumb",
      "-Wall",
      "-ffunction-sections",
      "-fdata-sections",
      "-fsingle-precision-constant",
      "-MMD"
    ],
    "c": [
      "-std=gnu11"
    ],
    "cxx": [
      "-std=gnu++14",
      "-fno-exceptions",
      "-fno-rtti",
      "-felide-constructors",
      "-Wno-error=narrowing"
    ]
  },

  "linker_flags": [
    "-mcpu=cortex-m0plus",
    "-mthumb",
    "-Wl,--gc-sections",
    "-Wl,--relax",
    "-Wl,--print-memory-usage",
    "--specs=nano.specs"
  ],

  "linker_scripts": [],

  "linker_libs": [
    "-larm_cortexM0l_math",
    "-lm",
    "-lstdc++",
    "-lc",
    "-lgcc"
  ],

  "profiles": {
    "release": {
      "compile_flags": ["-Os", "-flto=auto", "-fno-fat-lto-objects"],
      "link_flags": ["-Os", "-flto=auto", "-fuse-linker-plugin"]
    },
    "quick": {
      "compile_flags": ["-O1"],
      "link_flags": []
    }
  },

  "defines": [
    "__MKL26Z64__",
    "ARDUINO_ARCH_TEENSY",
    ["ARDUINO", "10819"],
    ["TEENSYDUINO", "159"],
    "USB_SERIAL",
    "LAYOUT_US_ENGLISH"
  ]
}
