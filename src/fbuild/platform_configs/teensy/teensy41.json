{
  "name": "Teensy 4.1",
  "description": "Configuration for Teensy 4.1 board - NXP i.MX RT1062 ARM Cortex-M7 @ 600MHz",
  "board": "teensy41",
  "mcu": "imxrt1062",
  "architecture": "arm",

  "compiler_flags": {
    "common": [
      "-mcpu=cortex-m7",
      "-mthumb",
      "-mfloat-abi=hard",
      "-mfpu=fpv5-d16",
      "-Wall",
      "-Wextra",
      "-Wno-unused-parameter",
      "-ffunction-sections",
      "-fdata-sections",
      "-MMD"
    ],
    "c": [
      "-std=gnu11"
    ],
    "cxx": [
      "-std=gnu++17",
      "-fno-exceptions",
      "-fno-rtti",
      "-felide-constructors",
      "-fno-threadsafe-statics"
    ]
  },

  "linker_flags": [
    "-mcpu=cortex-m7",
    "-mthumb",
    "-mfloat-abi=hard",
    "-mfpu=fpv5-d16",
    "-Wl,--gc-sections",
    "-Wl,--print-memory-usage"
  ],

  "linker_scripts": [
    "imxrt1062_t41.ld"
  ],

  "linker_libs": [
    "-lgcc",
    "-lstdc++",
    "-lm",
    "-lc"
  ],

  "profiles": {
    "release": {
      "compile_flags": ["-Os", "-flto=auto", "-fno-fat-lto-objects"],
      "link_flags": ["-Os", "-flto=auto", "-fuse-linker-plugin"]
    },
    "quick": {
      "compile_flags": ["-O1"],
      "link_flags": []
    }
  },

  "defines": [
    "__IMXRT1062__",
    "ARDUINO_ARCH_TEENSY",
    "ARDUINO_TEENSY41",
    ["ARDUINO", "10819"],
    ["TEENSYDUINO", "159"],
    "USB_SERIAL",
    "LAYOUT_US_ENGLISH"
  ]
}
