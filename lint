#!/bin/bash
set -e

echo Running ruff src
uv run ruff check --fix src
echo Running ruff tests
uv run ruff check --fix tests
echo Running black src tests
uv run black src tests
echo Running isort src tests
uv run isort --profile black src tests
echo Running pyright src tests
uv run pyright src tests
echo Running flake8 KeyboardInterrupt checks
uv run flake8 src --select=KBI
echo Running flake8 sys.path.insert checks
uv run flake8 src scripts tests --select=SPI --exclude='*/.fbuild/*,*/.build/*,*/.zap/*'
echo Running orchestrator signature checks
uv run python scripts/check_orchestrator_signatures.py
echo Running message serialization checks
uv run python scripts/check_message_serialization.py
echo Linting complete!
exit 0
